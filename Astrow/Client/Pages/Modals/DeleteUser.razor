@page "/DeleteUser"
@using Astrow.Shared.DTO
@inject IModalService modal
@inject IAPICallers.IStudentCaller studentcaller
@inject Blazored.LocalStorage.ILocalStorageService localStorage

<PageTitle>Delete User</PageTitle>
<form>
    <center>
        <h3>DeleteUser</h3>
        <h4>are you sure you want to delete this user?</h4>
        <h5>these actions cant be undone!</h5>
        <button class="btn btn-danger" @onclick="@(() => DeleteStudent(studentDTO))">Im sure</button>
    </center>
</Form>

@code {
    [CascadingParameter] public IModalService Modal { get; set; } = default!;
    [Parameter] public DeleteStudentDTO studentDTO { get; set; }
    public async Task DeleteStudent(DeleteStudentDTO studentdto)
    {
        var temp = studentcaller.DeleteStudent(studentdto);
    }
}
